<div class="container">
  <h1>Result</h1>
  
  <p><%= @result[:content].html_safe %></p>
  <p><strong>Score:</strong> <%= @result[:score].round(2) %> points</p>
  <p class="extra-info">Match started at: <%= @start_time.strftime("%T") %></p>
  <p class="extra-info">Match ended at: <%= @end_time.strftime("%T") %></p>
  
  <%= link_to "New game", new_path %>
</div>