<div class="container">
  <h1>Longest Word Game</h1>
  <ul>
    <% @letters.each do |letter| %>
      <li class="box-number"><%= letter.upcase %></li>
    <% end %>
  </ul>
  <p>What's the longest word you can find?</p>
  <form action="/score" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="user_word" id="answer">
    <input type="submit" value="Play" id="send-form">
  </form>
</div>